@page
@model megaDesk_Web.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Desk Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskId">
            <input type="hidden" asp-for="DeskQuote.QuoteDate">
            <input type="hidden" asp-for="DeskQuote.DeskQuoteID" />
           @* Customer Name *@
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            @* Desk Width *@
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" type="number" min="24" max="96"/>
                <span asp-validation-for="DeskQuote.Desk.Width" class="text-danger"></span>
            </div>
            @* Desk Depth *@
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" type="number" min="12" max="48"/>
                <span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
            </div>
            @* Number of drawers *@
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.NumberOfDrawers" class="form-control" type="number" min="0" max="7" />
                <span asp-validation-for="DeskQuote.Desk.NumberOfDrawers" class="text-danger"></span>
            </div>
            @* Surface Material *@
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.DesktopMaterialId" class="control-label"></label>
                <select asp-for="DeskQuote.Desk.DesktopMaterialId" class ="form-control" asp-items="ViewBag.DesktopMaterialId"></select>
            </div>
            @* Delivery Options *@
            <div class="form-group">
                <label asp-for="DeskQuote.DeliveryId" class="control-label"></label>
                <select asp-for="DeskQuote.DeliveryId" class ="form-control" asp-items="ViewBag.DeliveryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
